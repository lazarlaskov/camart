<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/uploadfrag"
    tools:context="com.example.athan.raterdroid.UploadFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload fragment"
        android:textAlignment="center"
        android:id="@+id/uploadresponse"
        android:gravity="center"
        android:textColor="#ecf0f1"
        android:background="#34495e"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="20dp"
        />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/iw_upReview"
        android:layout_below="@+id/uploadresponse"
        />

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressupload"
        android:foregroundGravity="center"
        android:visibility="invisible"
        />
</RelativeLayout>
