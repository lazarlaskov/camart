<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:padding="15dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tw_list_item_publisher"
        android:text="Publisher"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/img_rater_layout"
        android:layout_below="@+id/tw_list_item_publisher"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="500dp"
            android:layout_centerHorizontal="true"
            android:background="#000000"
            android:id="@+id/iw_list_item_image"
            android:src="@drawable/lynx"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X.XX of Y"
            android:textSize="22dp"
            android:textStyle="bold"
            android:id="@+id/tw_avg_rating"
            android:textColor="#FFFFFF"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:drawableLeft="@drawable/user"
            android:gravity="center_vertical"
            />

    </RelativeLayout>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rb_list_item_rating"
        android:layout_below="@+id/img_rater_layout"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_vote"
        android:text="Vote"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />






</RelativeLayout>